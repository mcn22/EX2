@model PensamientosViewModel


@section Scripts
{
    <script>

        function Borrar(url) {
            $.ajax({
                url: url,
                type: "DELETE",
                success: function (data) {
                    if (data.success) {
                        $("div").remove("#p" + data.id + "-1");
                        $("div").remove("#p" + data.id + "-2");
                    }
                    else {
                    }
                }
            });
        }

    </script>
}