@model Pensamientos.Domain.Models.Pensamiento

@{
    var titulo = "Crear Nuevo Pensamiento";
}

<form method="post" enctype="multipart/form-data">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (Model.Id != 0)
        {
            titulo = "Editar Pensamiento";
            <input type="hidden" asp-for="Id" />
        }

        <div class="col-12 border-bottom">
            <h2 class="text-primary">@titulo</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Titulo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Contenido"></label>
                </div>
                <div class="col-8">
                    @* CONTROL PARA CONTENIDO *@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Imagen
                </div>
                <div class="col-8">
                    @* CONTROL PARA CARGAR ARCHIVO *@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="~/Views/Shared/_BotonesGuardarRegresar.cshtml" model="Model.Id" />
                    }
                    else
                    {
                        <div class="row">
                            <div class="col">
                                <button type="submit" onclick="return ValidarImagen();" class="btn btn-primary form-control">Crear</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Regresar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        @if (Model.Id != 0)
        {
            <div class="col-3 offset-1">
                <img src="@Model.Imagen" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
            </div>
        }
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>

        function ValidarImagen() {
        }

    </script>
}
